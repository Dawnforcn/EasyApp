<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    style="@style/mm.v"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <com.harreke.easyapp.widget.ratioview.RatioFrameLayout
        android:id="@+id/room_player_root"
        style="@style/mw"
        app:ratio="1">

        <ImageView
            android:id="@+id/room_player_image"
            style="@style/mm"
            android:scaleType="fitXY"
            android:src="@android:drawable/star_big_on"/>

        <com.harreke.easyapp.controllerlayout.ControllerLayout
            android:id="@+id/controller"
            style="@style/mm"/>

    </com.harreke.easyapp.widget.ratioview.RatioFrameLayout>

    <TextView
        style="@style/ww"
        android:layout_margin="8dp"
        android:text="EasyApp开发框架内置控制布局ControllerLayout，该布局可以挂载各种控件ControllerWidget，控制布局能够自动识别控件的位置、大小并进行显示、隐藏操作"/>

</LinearLayout>