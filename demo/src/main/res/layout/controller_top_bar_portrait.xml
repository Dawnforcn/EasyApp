<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/mw.h"
    android:layout_gravity="center_horizontal"
    android:background="@color/transparentDarkGray"
    android:clickable="true"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/top_simple_bar_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/background_button_light"
        android:padding="8dp"
        android:src="@drawable/vector_arrow_left"/>

    <FrameLayout
        style="@style/mww">

        <TextView
            android:id="@+id/top_simple_bar_title"
            style="@style/ww"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/white"
            android:visibility="invisible"/>

    </FrameLayout>

    <ImageView
        android:id="@+id/top_simple_bar_share"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/background_button_light"
        android:padding="8dp"
        android:src="@android:drawable/ic_menu_share"/>

</LinearLayout>