<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    style="@style/mm.v"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <include
        layout="@layout/widget_toolbar_navigation"/>

    <com.harreke.easyapp.widget.softinputview.SoftInputEditText
        android:id="@+id/soft_input_edit"
        style="@style/mw"/>

    <Button
        android:id="@+id/soft_input_open"
        style="@style/ww"
        android:text="显示输入法"/>

    <Button
        android:id="@+id/soft_input_close"
        style="@style/ww"
        android:text="关闭输入法"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/soft_input_toast"
        style="@style/ww"
        android:layout_margin="8dp"
        android:text="输入法状态：关闭"/>

    <TextView
        style="@style/ww"
        android:layout_margin="8dp"
        android:text="EasyApp内置可控文本输入视图，可以方便地捕获输入法变换事件"/>

</LinearLayout>