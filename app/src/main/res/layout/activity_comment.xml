<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    style="@style/mm.v"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/Background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/White"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/comment_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/button_transparent"
            android:padding="8dp"
            android:src="@drawable/image_back"/>

        <TextView
            android:id="@+id/comment_id"
            style="@style/mmw"
            android:gravity="center_vertical"
            android:hint="@string/content_id"
            android:lines="1"
            android:padding="8dp"
            android:textColor="@color/Title"
            android:textSize="16dp"/>

        <ImageView
            android:id="@+id/comment_refresh"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/button_transparent"
            android:padding="8dp"
            android:src="@drawable/image_refresh"/>

        <ImageView
            android:id="@+id/comment_locate"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="8dp"
            android:src="@drawable/image_locate"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/comment_reply"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/button_transparent"
            android:padding="8dp"
            android:src="@drawable/image_reply"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/button_tab_unchecked"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/comment_pager"
        style="@style/mm">

        <android.support.v4.view.PagerTabStrip
            android:id="@+id/comment_pager_indicator"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:visibility="gone"/>

    </android.support.v4.view.ViewPager>

</LinearLayout>