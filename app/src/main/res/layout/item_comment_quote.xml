<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    style="@style/mw.v"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/button_lightyellow"
    android:padding="8dp">

    <TextView
        android:id="@+id/comment_quote_text"
        style="@style/ww"
        android:text="@string/comment_quote_text"
        android:textColor="@color/Content"
        android:textSize="14dp"/>

    <LinearLayout
        style="@style/mw.h"
        android:layout_marginTop="4dp">

        <TextView
            android:id="@+id/comment_quote_username"
            style="@style/mww"
            android:text="@string/comment_quote_user_name"
            android:textColor="@color/Assist"
            android:textSize="12dp"/>

        <TextView
            android:id="@+id/comment_quote_reference"
            style="@style/ww"
            android:textColor="@color/Assist"
            android:textSize="12dp"/>

    </LinearLayout>

</LinearLayout>