<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    style="@style/mw.v"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/Background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/White"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/content_user_avatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="start|center_vertical"
            android:background="@drawable/button_transparent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/content_user_avatar_image"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:src="@drawable/image_avatar"/>

            <FrameLayout
                android:id="@+id/content_user_notification"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_gravity="end|top"
                android:layout_margin="4dp"
                android:background="@drawable/shape_notification"/>

        </FrameLayout>

        <com.harreke.easyapp.widgets.GroupTabView
            android:id="@+id/content_group"
            style="@style/mmw"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:background="@color/White"
            android:divider="@drawable/divider_vertical_dot"
            android:dividerPadding="8dp"
            android:orientation="horizontal"
            android:showDividers="middle">

            <com.harreke.easyapp.widgets.ChildTabView
                android:id="@+id/content_selection"
                style="@style/mmw"
                android:background="@drawable/button_tab_underline"
                android:checked="true"
                android:drawableRight="@drawable/button_dropdown"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/main_recommend"
                android:textColor="@color/color_tab_underline"
                android:textSize="16dp"/>

            <tv.acfun.read.widgets.RepeatCheckableChildTabView
                android:id="@+id/content_channel"
                style="@style/mmw"
                android:background="@drawable/button_tab_underline"
                android:drawableRight="@drawable/button_dropdown"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/channel_misc"
                android:textColor="@color/color_tab_underline"
                android:textSize="16dp"/>

        </com.harreke.easyapp.widgets.GroupTabView>

        <ImageView
            android:id="@+id/content_setting"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="end"
            android:layout_marginLeft="8dp"
            android:background="@drawable/button_transparent"
            android:padding="8dp"
            android:src="@drawable/image_setting"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/button_tab_unchecked"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/content_pager"
        style="@style/mm"/>

</LinearLayout>