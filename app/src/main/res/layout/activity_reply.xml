<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    style="@style/mm.v"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/Background"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/White"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/reply_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/button_transparent"
            android:padding="8dp"
            android:src="@drawable/image_back"/>

        <TextView
            android:id="@+id/reply_id"
            style="@style/mmw"
            android:gravity="center_vertical"
            android:hint="@string/reply_id"
            android:lines="1"
            android:padding="8dp"
            android:textColor="@color/Title"
            android:textSize="16dp"/>

        <ImageView
            android:id="@+id/reply_send"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/button_transparent"
            android:padding="8dp"
            android:src="@drawable/image_send"/>

    </LinearLayout>

    <LinearLayout
        style="@style/mw.h"
        android:background="@color/White"
        android:divider="@drawable/divider_vertical_dot"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:showDividers="middle">

        <ImageView
            android:id="@+id/reply_style_bold"
            android:layout_width="48dp"
            android:layout_height="43dp"
            android:background="@drawable/button_transparent"
            android:src="@drawable/image_style_bold"/>

        <ImageView
            android:id="@+id/reply_style_italic"
            android:layout_width="48dp"
            android:layout_height="43dp"
            android:background="@drawable/button_transparent"
            android:src="@drawable/image_style_italic"/>

        <ImageView
            android:id="@+id/reply_style_underline"
            android:layout_width="48dp"
            android:layout_height="43dp"
            android:background="@drawable/button_transparent"
            android:src="@drawable/image_style_underline"/>

        <ImageView
            android:id="@+id/reply_style_strikethrough"
            android:layout_width="48dp"
            android:layout_height="43dp"
            android:background="@drawable/button_transparent"
            android:src="@drawable/image_style_strikethrough"/>

        <LinearLayout
            android:id="@+id/reply_style_color"
            style="@style/ww"
            android:background="@drawable/button_transparent">

            <FrameLayout
                android:id="@+id/reply_style_color_indicator"
                android:layout_width="24dp"
                android:layout_height="19dp"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="12dp"
                android:background="@color/Content"/>

            <TextView
                android:id="@+id/reply_style_color_picker"
                android:layout_width="24dp"
                android:layout_height="43dp"
                android:background="@drawable/button_transparent"
                android:gravity="center"
                android:src="@drawable/image_style_bold"
                android:text="@string/app_dropdown"
                android:textColor="@color/Black"
                android:textSize="16dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/reply_style_size"
            style="@style/ww"
            android:background="@drawable/button_transparent">

            <TextView
                android:id="@+id/reply_style_size_indicator"
                android:layout_width="24dp"
                android:layout_height="43dp"
                android:gravity="center"
                android:src="@drawable/image_style_bold"
                android:text="@string/reply_size"
                android:textColor="@color/Black"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/reply_style_size_picker"
                android:layout_width="24dp"
                android:layout_height="43dp"
                android:background="@drawable/button_transparent"
                android:gravity="center"
                android:src="@drawable/image_style_bold"
                android:text="@string/app_dropdown"
                android:textColor="@color/Black"
                android:textSize="16dp"/>

        </LinearLayout>

        <CheckBox
            android:id="@+id/reply_style_emot"
            android:layout_width="48dp"
            android:layout_height="43dp"
            android:background="@drawable/button_tab_theme"
            android:button="@drawable/image_style_emot"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/button_tab_unchecked"/>

    <tv.acfun.read.widgets.UBBEditText
        android:id="@+id/reply_input"
        style="@style/mmw"
        android:background="@color/Transparent"
        android:gravity="start|top"
        android:hint="@string/reply_input"
        android:padding="8dp"
        android:textColor="@color/Content"
        android:textColorHint="@color/Assist"
        android:textSize="16dp"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/reply_pager"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:visibility="gone">

        <android.support.v4.view.PagerTabStrip
            android:id="@+id/reply_pager_indicator"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:background="@color/White"/>

    </android.support.v4.view.ViewPager>

</LinearLayout>