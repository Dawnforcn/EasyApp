<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    style="@style/mm.v"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="8dp">

    <LinearLayout
        android:id="@+id/menu_user"
        style="@style/mw.h"
        android:background="@drawable/button_transparent"
        android:gravity="center_vertical"
        android:padding="8dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/menu_user_avatar"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/image_avatar"/>

        <TextView
            android:id="@+id/menu_user_name"
            style="@style/mw"
            android:layout_marginLeft="8dp"
            android:text="@string/user_name"
            android:textColor="@color/Content"
            android:textSize="24dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/menu_user_signature"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="8dp"
        android:lines="1"
        android:padding="8dp"
        android:text="@string/user_signature"
        android:textColor="@color/Content"
        android:textSize="16dp"/>

    <LinearLayout
        android:id="@+id/menu_at"
        style="@style/mw.h"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_transparent"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="8dp"
            android:src="@drawable/image_at"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/menu_at"
            android:textColor="@color/Title"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/menu_at_text"
            android:layout_width="32dp"
            android:layout_height="24dp"
            android:background="@color/Red"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/White"
            android:textSize="16dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_mail"
        style="@style/mw.h"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_transparent"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="8dp"
            android:src="@drawable/image_mail"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/menu_mail"
            android:textColor="@color/Title"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/menu_mail_text"
            android:layout_width="32dp"
            android:layout_height="24dp"
            android:background="@color/Red"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/White"
            android:textSize="16dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_favourite"
        style="@style/mw.h"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_transparent"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="8dp"
            android:src="@drawable/image_favourite"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="8dp"
            android:gravity="center_vertical"
            android:text="@string/menu_favourite"
            android:textColor="@color/Title"
            android:textSize="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_history"
        style="@style/mw.h"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_transparent"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="8dp"
            android:src="@drawable/image_history"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="8dp"
            android:gravity="center_vertical"
            android:text="@string/menu_history"
            android:textColor="@color/Title"
            android:textSize="20dp"/>

    </LinearLayout>

    <FrameLayout
        style="@style/mmw"/>

    <LinearLayout
        style="@style/mw.h">

        <LinearLayout
            android:id="@+id/menu_setting"
            style="@style/mmw.h"
            android:background="@drawable/button_transparent">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/image_setting"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:text="@string/menu_setting"
                android:textColor="@color/Title"
                android:textSize="16dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_pattern"
            style="@style/mmw.h"
            android:background="@drawable/button_transparent">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/image_pattern"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:text="@string/menu_pattern_night"
                android:textColor="@color/Title"
                android:textSize="16dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>