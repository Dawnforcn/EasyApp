<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    style="@style/mm"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/Background">

    <com.harreke.easyapp.widgets.ChildViewPager
        android:id="@+id/comic_pager"
        style="@style/mm"/>

    <FrameLayout
        android:id="@+id/comic_actionbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/White"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/comic_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/button_transparent"
            android:padding="8dp"
            android:src="@drawable/back"/>

        <ImageView
            android:id="@+id/comic_save"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="end"
            android:background="@drawable/button_transparent"
            android:padding="8dp"
            android:src="@drawable/image_save"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/comic_page_background"
        android:layout_width="96dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/TransparentBlack"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/comic_page"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:textColor="@color/Title"
        android:textSize="20dp"/>

</FrameLayout>