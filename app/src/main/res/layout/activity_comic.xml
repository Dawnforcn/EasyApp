<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    style="@style/mm"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/Background">

    <android.support.v4.view.ViewPager
        android:id="@+id/comic_pager"
        style="@style/mm"/>

    <FrameLayout
        android:id="@+id/comic_actionbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/White"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/comic_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/button_transparent"
            android:padding="8dp"
            android:src="@drawable/back"/>

        <ImageView
            android:id="@+id/comic_save"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="end"
            android:background="@drawable/button_transparent"
            android:padding="8dp"
            android:src="@drawable/image_save"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/comic_page_background"
        android:layout_width="96dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/TransparentBlack"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/comic_page"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:textColor="@color/Title"
        android:textSize="20dp"/>

    <LinearLayout
        android:id="@+id/comic_save_dialog"
        style="@style/mw.v"
        android:layout_gravity="center"
        android:layout_margin="48dp"
        android:background="@drawable/whitecard"
        android:padding="8dp"
        android:visibility="gone">

        <TextView
            style="@style/mw"
            android:padding="8dp"
            android:text="@string/comic_save"
            android:textColor="@color/Title"
            android:textSize="12dp"/>

        <EditText
            android:id="@+id/comic_save_dialog_input"
            style="@style/mw"
            android:background="@drawable/button_tab_unchecked"
            android:hint="@string/comic_save_input"
            android:lines="1"
            android:padding="8dp"
            android:textColor="@color/Title"
            android:textColorHint="@color/Assist"
            android:textSize="16dp"/>

        <LinearLayout
            style="@style/mw.h">

            <TextView
                android:id="@+id/comic_save_dialog_ok"
                style="@style/mww"
                android:background="@drawable/button_transparent"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:text="@string/app_ok"
                android:textColor="@color/color_text_title"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/comic_save_dialog_cancel"
                style="@style/mww"
                android:background="@drawable/button_transparent"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:text="@string/app_cancel"
                android:textColor="@color/color_text_title"
                android:textSize="16dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/comic_save_dialog_overwrite"
        style="@style/mw.v"
        android:layout_gravity="center"
        android:layout_margin="48dp"
        android:background="@drawable/whitecard"
        android:padding="8dp"
        android:visibility="gone">

        <TextView
            style="@style/mw"
            android:padding="8dp"
            android:text="@string/comic_save_overwrite"
            android:textColor="@color/Title"
            android:textSize="16dp"/>

        <LinearLayout
            style="@style/mw.h">

            <TextView
                android:id="@+id/comic_save_dialog_overwrite_ok"
                style="@style/mww"
                android:background="@drawable/button_transparent"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:text="@string/app_ok"
                android:textColor="@color/color_text_title"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/comic_save_dialog_overwrite_cancel"
                style="@style/mww"
                android:background="@drawable/button_transparent"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:text="@string/app_cancel"
                android:textColor="@color/color_text_title"
                android:textSize="16dp"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>