<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    style="@style/mw.v"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/comment_quote_expand"
        style="@style/mw"
        android:background="@drawable/button_quote"
        android:gravity="center_horizontal"
        android:padding="8dp"
        android:text="@string/comment_quote_expand"
        android:textColor="@color/Content"
        android:textSize="12dp"/>

    <LinearLayout
        android:id="@+id/comment_quotes"
        style="@style/mw.v"
        android:divider="@drawable/divider_horizontal_dot"
        android:showDividers="middle"/>

    <include
        layout="@layout/item_comment_floor"/>

</LinearLayout>