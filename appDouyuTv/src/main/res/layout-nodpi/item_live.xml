<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    style="@style/mw"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="8dp">

    <LinearLayout
        android:id="@+id/live_root"
        style="@style/mw.v">

        <com.harreke.easyapp.widgets.RatioImageView
            android:id="@+id/live_src"
            style="@style/mw"
            android:src="@drawable/loading_16x9"/>

        <TextView
            android:id="@+id/live_name"
            style="@style/mw"
            android:paddingBottom="16dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="16dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/Caption"/>

    </LinearLayout>

    <View
        android:id="@+id/live_ripple"
        style="@style/mw"
        android:layout_alignBottom="@id/live_root"
        android:layout_alignLeft="@id/live_root"
        android:layout_alignRight="@id/live_root"
        android:layout_alignTop="@id/live_root"/>

</RelativeLayout>