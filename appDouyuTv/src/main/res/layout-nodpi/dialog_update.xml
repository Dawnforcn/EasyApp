<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    style="@style/ww.v"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp">

    <LinearLayout
        style="@style/ww.h">

        <TextView
            style="@style/ww"
            android:text="@string/setting_support_check_update_version"
            android:textAppearance="@style/Body1"/>

        <TextView
            android:id="@+id/update_version"
            style="@style/ww"
            android:layout_marginLeft="8dp"
            android:textAppearance="@style/Caption"/>

    </LinearLayout>

    <LinearLayout
        style="@style/ww.h">

        <TextView
            style="@style/ww"
            android:text="@string/setting_support_check_update_content"
            android:textAppearance="@style/Body1"/>

        <TextView
            android:id="@+id/update_content"
            style="@style/ww"
            android:layout_marginLeft="8dp"
            android:textAppearance="@style/Caption"/>

    </LinearLayout>

    <LinearLayout
        style="@style/ww.h">

        <TextView
            style="@style/ww"
            android:text="@string/setting_support_check_update_size"
            android:textAppearance="@style/Body1"/>

        <TextView
            android:id="@+id/update_size"
            style="@style/ww"
            android:layout_marginLeft="8dp"
            android:textAppearance="@style/Caption"/>

    </LinearLayout>

