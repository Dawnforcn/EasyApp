<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    style="@style/mw"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/room_root"
        style="@style/mw.v">

        <com.harreke.easyapp.widgets.RatioImageView
            android:id="@+id/room_src"
            style="@style/mw"
            android:src="@drawable/loading_16x9"/>

        <LinearLayout
            style="@style/mw.v"
            android:paddingBottom="16dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp">

            <LinearLayout
                style="@style/mw.h">

                <LinearLayout
                    style="@style/mww.h"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/user_holo"/>

                    <TextView
                        android:id="@+id/room_nickname"
                        style="@style/mw"
                        android:layout_marginLeft="8dp"
                        android:singleLine="true"
                        android:textAppearance="@style/Caption"/>

                </LinearLayout>

                <LinearLayout
                    style="@style/ww.h"
                    android:layout_marginLeft="8dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/online_holo"/>

                    <TextView
                        android:id="@+id/room_online"
                        style="@style/ww"
                        android:layout_marginLeft="8dp"
                        android:singleLine="true"
                        android:textAppearance="@style/Caption"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/room_name"
                style="@style/mw"
                android:layout_marginTop="8dp"
                android:singleLine="true"
                android:textAppearance="@style/Caption"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>