<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    style="@style/mm.v"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background">

    <include
        layout="@layout/widget_toolbar"/>

    <FrameLayout
        style="@style/mm">

        <ScrollView
            style="@style/mm.v">

            <LinearLayout
                style="@style/mm.v"
                android:padding="8dp">

                <TextView
                    style="@style/ww"
                    android:padding="8dp"
                    android:text="@string/setting_system"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="@dimen/Subhead"/>

                <android.support.v7.widget.SwitchCompat
                    style="@style/mw"
                    android:background="@color/transparent"
                    android:gravity="center_vertical"
                    android:paddingBottom="16dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="16dp"
                    android:text="@string/setting_system_auto_load_more"
                    android:textColor="@color/darkGray"
                    android:textSize="@dimen/Body1"
                    android:thumb="@drawable/selector_switch_thumb"
                    app:track="@drawable/selector_switch_track"/>

                <android.support.v7.widget.SwitchCompat
                    style="@style/mw"
                    android:background="@color/transparent"
                    android:gravity="center_vertical"
                    android:paddingBottom="16dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="16dp"
                    android:text="@string/setting_system_show_empty_category"
                    android:textColor="@color/darkGray"
                    android:textSize="@dimen/Body1"
                    android:thumb="@drawable/selector_switch_thumb"
                    app:track="@drawable/selector_switch_track"/>

                <android.support.v7.widget.SwitchCompat
                    style="@style/mw"
                    android:background="@color/transparent"
                    android:gravity="center_vertical"
                    android:paddingBottom="16dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="16dp"
                    android:text="@string/setting_system_receive_push"
                    android:textColor="@color/darkGray"
                    android:textSize="@dimen/Body1"
                    android:thumb="@drawable/selector_switch_thumb"
                    app:track="@drawable/selector_switch_track"/>

                <android.support.v7.widget.SwitchCompat
                    style="@style/mw"
                    android:background="@color/transparent"
                    android:gravity="center_vertical"
                    android:paddingBottom="16dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="16dp"
                    android:text="@string/setting_system_play_video_under_mobile_network"
                    android:textColor="@color/darkGray"
                    android:textSize="@dimen/Body1"
                    android:thumb="@drawable/selector_switch_thumb"
                    app:track="@drawable/selector_switch_track"/>

                <LinearLayout
                    style="@style/mw.v"
                    android:paddingBottom="16dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="16dp">

                    <LinearLayout
                        style="@style/mw.h"
                        android:gravity="center_vertical">

                        <TextView
                            style="@style/mww"
                            android:text="@string/setting_system_switch_decode"
                            android:textColor="@color/darkGray"
                            android:textSize="@dimen/Body1"/>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/arrow_down"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:orientation="horizontal">

                        <FrameLayout
                            style="@style/mmw">

                            <RadioButton
                                android:layout_width="72dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:background="@drawable/selector_setting"
                                android:button="@color/transparent"
                                android:checked="true"
                                android:gravity="center"
                                android:text="@string/setting_system_switch_decode_hw"
                                android:textColor="@color/selector_setting_text"
                                android:textSize="@dimen/Body1"/>

                        </FrameLayout>

                        <FrameLayout
                            style="@style/mmw">

                            <RadioButton
                                android:layout_width="72dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:background="@drawable/selector_setting"
                                android:button="@color/transparent"
                                android:gravity="center"
                                android:text="@string/setting_system_switch_decode_sw"
                                android:textColor="@color/selector_setting_text"
                                android:textSize="@dimen/Body1"/>

                        </FrameLayout>

                    </LinearLayout>

                </LinearLayout>

                <include
                    layout="@layout/widget_divider_horizontal"/>

                <TextView
                    style="@style/ww"
                    android:padding="8dp"
                    android:text="@string/setting_live"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="@dimen/Subhead"/>

                <android.support.v7.widget.SwitchCompat
                    style="@style/mw"
                    android:background="@color/transparent"
                    android:gravity="center_vertical"
                    android:paddingBottom="16dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="16dp"
                    android:text="@string/setting_live_player_gesture"
                    android:textColor="@color/darkGray"
                    android:textSize="@dimen/Body1"
                    android:thumb="@drawable/selector_switch_thumb"
                    app:track="@drawable/selector_switch_track"/>

                <LinearLayout
                    style="@style/mw.v"
                    android:paddingBottom="16dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="16dp">

                    <LinearLayout
                        style="@style/mw.h"
                        android:gravity="center_vertical">

                        <TextView
                            style="@style/mww"
                            android:text="@string/setting_live_danmaku_opacity"
                            android:textColor="@color/darkGray"
                            android:textSize="@dimen/Body1"/>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/arrow_down"/>

                    </LinearLayout>

                    <SeekBar
                        style="@style/mw"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="8dp"
                        android:max="100"
                        android:progress="0"
                        android:progressDrawable="@drawable/layer_seekbar"
                        android:thumb="@drawable/shape_seekbar_thumb"/>

                </LinearLayout>

                <LinearLayout
                    style="@style/mw.v"
                    android:paddingBottom="16dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="16dp">

                    <LinearLayout
                        style="@style/mw.h"
                        android:gravity="center_vertical">

                        <TextView
                            style="@style/mww"
                            android:text="@string/setting_live_danmaku_size"
                            android:textColor="@color/darkGray"
                            android:textSize="@dimen/Body1"/>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/arrow_down"/>

                    </LinearLayout>

                    <SeekBar
                        style="@style/mw"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="8dp"
                        android:max="100"
                        android:progress="0"
                        android:progressDrawable="@drawable/layer_seekbar"
                        android:thumb="@drawable/shape_seekbar_thumb"/>

                </LinearLayout>

                <LinearLayout
                    style="@style/mw.v"
                    android:paddingBottom="16dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="16dp">

                    <LinearLayout
                        style="@style/mw.h"
                        android:gravity="center_vertical">

                        <TextView
                            style="@style/mww"
                            android:text="@string/setting_live_danmaku_location"
                            android:textColor="@color/darkGray"
                            android:textSize="@dimen/Body1"/>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/arrow_down"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:orientation="horizontal">

                        <FrameLayout
                            style="@style/mmw">

                            <RadioButton
                                android:layout_width="72dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:background="@drawable/selector_setting"
                                android:button="@color/transparent"
                                android:checked="true"
                                android:gravity="center"
                                android:text="@string/setting_live_danmaku_location_top"
                                android:textColor="@color/selector_setting_text"
                                android:textSize="@dimen/Body1"/>

                        </FrameLayout>

                        <FrameLayout
                            style="@style/mmw">

                            <RadioButton
                                android:layout_width="72dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:background="@drawable/selector_setting"
                                android:button="@color/transparent"
                                android:gravity="center"
                                android:text="@string/setting_live_danmaku_location_bottom"
                                android:textColor="@color/selector_setting_text"
                                android:textSize="@dimen/Body1"/>

                        </FrameLayout>

                        <FrameLayout
                            style="@style/mmw">

                            <RadioButton
                                android:layout_width="72dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:background="@drawable/selector_setting"
                                android:button="@color/transparent"
                                android:gravity="center"
                                android:text="@string/setting_live_danmaku_location_fullscreen"
                                android:textColor="@color/selector_setting_text"
                                android:textSize="@dimen/Body1"/>

                        </FrameLayout>

                    </LinearLayout>

                </LinearLayout>

                <include
                    layout="@layout/widget_divider_horizontal"/>

                <TextView
                    style="@style/ww"
                    android:padding="8dp"
                    android:text="@string/setting_support"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="@dimen/Subhead"/>

                <TextView
                    style="@style/mw"
                    android:gravity="center_vertical"
                    android:paddingBottom="16dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="16dp"
                    android:text="@string/setting_support_check_update"
                    android:textColor="@color/darkGray"
                    android:textSize="@dimen/Body1"/>

                <TextView
                    style="@style/mw"
                    android:gravity="center_vertical"
                    android:paddingBottom="16dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="16dp"
                    android:text="@string/setting_support_feedback"
                    android:textColor="@color/darkGray"
                    android:textSize="@dimen/Body1"/>

                <TextView
                    style="@style/mw"
                    android:gravity="center_vertical"
                    android:paddingBottom="16dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="16dp"
                    android:text="@string/setting_support_about_us"
                    android:textColor="@color/darkGray"
                    android:textSize="@dimen/Body1"/>

            </LinearLayout>

        </ScrollView>

        <include
            layout="@layout/widget_toolbar_shadow"/>

    </FrameLayout>

</LinearLayout>