<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/player_control_top"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@drawable/shape_corner_transparentgray"
    android:clickable="true"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/player_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="8dp"
        android:src="@drawable/image_toolbar_back"/>

    <TextView
        android:id="@+id/player_title"
        style="@style/mww"
        android:layout_marginLeft="8dp"
        android:textColor="@color/white"
        android:textSize="@dimen/Headline"/>

    <TextView
        android:id="@+id/player_definition_hd"
        style="@style/ww"
        android:layout_marginLeft="8dp"
        android:background="@drawable/shape_corner_primary"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp"
        android:text="@string/player_definition_hd"
        android:textColor="@color/white"
        android:textSize="@dimen/Body1"/>

    <TextView
        android:id="@+id/player_definition_sd"
        style="@style/ww"
        android:layout_marginLeft="8dp"
        android:background="@drawable/shape_corner_primary"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp"
        android:text="@string/player_definition_sd"
        android:textColor="@color/white"
        android:textSize="@dimen/Body1"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/player_live"
        style="@style/ww"
        android:layout_marginLeft="8dp"
        android:background="@drawable/shape_corner_primary"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp"
        android:text="@string/player_live"
        android:textColor="@color/white"
        android:textSize="@dimen/Body1"/>

    <ImageView
        android:id="@+id/player_setting"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="8dp"
        android:padding="8dp"
        android:src="@drawable/setting"/>

</LinearLayout>