<?xml version="1.0" encoding="utf-8"?>
<merge
    style="@style/mm"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/profile_toolbar"/>

    <LinearLayout
        style="@style/mm.v">

        <LinearLayout
            style="@style/mw.v">

            <include
                layout="@layout/widget_toolbar_transparent"/>

            <LinearLayout
                style="@style/mw.h"
                android:gravity="center_vertical"
                android:paddingBottom="24dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="16dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_avatar"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@drawable/avatar"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginLeft="24dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/profile_username"
                        style="@style/mww"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/Subhead"
                        android:textStyle="bold"/>

                    <LinearLayout
                        style="@style/mw.h">

                        <LinearLayout
                            style="@style/mww.h"
                            android:gravity="center_vertical"
                            android:padding="4dp">

                            <TextView
                                style="@style/ww"
                                android:text="@string/profile_weight"
                                android:textColor="@color/white"
                                android:textSize="@dimen/Body1"/>

                            <TextView
                                android:id="@+id/profile_weight_text"
                                style="@style/ww"
                                android:layout_marginLeft="4dp"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:textColor="@color/white"
                                android:textSize="@dimen/Body1"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/profile_follow"
                            style="@style/mww.h"
                            android:gravity="center_vertical"
                            android:padding="4dp">

                            <TextView
                                style="@style/ww"
                                android:text="@string/profile_follow"
                                android:textColor="@color/white"
                                android:textSize="@dimen/Body1"/>

                            <TextView
                                android:id="@+id/profile_follow_text"
                                style="@style/ww"
                                android:layout_marginLeft="4dp"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:textColor="@color/white"
                                android:textSize="@dimen/Body1"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            style="@style/mm"
            android:background="@color/background">

            <LinearLayout
                style="@style/mm.v"
                android:padding="8dp">

                <LinearLayout
                    android:id="@+id/profile_mail_root"
                    style="@style/mw.h"
                    android:gravity="center_vertical"
                    android:paddingBottom="16dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="16dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/mail"/>

                    <TextView
                        style="@style/ww"
                        android:layout_marginLeft="32dp"
                        android:text="@string/profile_mail"
                        android:textSize="@dimen/Body1"/>

                    <TextView
                        android:id="@+id/profile_mail"
                        style="@style/mw"
                        android:layout_marginLeft="24dp"
                        android:gravity="end"
                        android:textColor="@color/darkCyan"
                        android:textSize="@dimen/Body1"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="72dp"
                    android:background="@color/divider"/>

                <LinearLayout
                    android:id="@+id/profile_phone_root"
                    style="@style/mw.h"
                    android:gravity="center_vertical"
                    android:paddingBottom="16dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="16dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/phone"/>

                    <TextView
                        style="@style/ww"
                        android:layout_marginLeft="32dp"
                        android:text="@string/profile_phone"
                        android:textSize="@dimen/Body1"/>

                    <TextView
                        android:id="@+id/profile_phone"
                        style="@style/mw"
                        android:layout_marginLeft="24dp"
                        android:gravity="end"
                        android:textColor="@color/darkCyan"
                        android:textSize="@dimen/Body1"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="72dp"
                    android:background="@color/divider"/>

                <LinearLayout
                    android:id="@+id/profile_qq_root"
                    style="@style/mw.h"
                    android:gravity="center_vertical"
                    android:paddingBottom="16dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="16dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/qq"/>

                    <TextView
                        style="@style/ww"
                        android:layout_marginLeft="32dp"
                        android:text="@string/profile_qq"
                        android:textSize="@dimen/Body1"/>

                    <TextView
                        android:id="@+id/profile_qq"
                        style="@style/mw"
                        android:layout_marginLeft="24dp"
                        android:gravity="end"
                        android:textColor="@color/darkCyan"
                        android:textSize="@dimen/Body1"/>

                </LinearLayout>

                <View
                    style="@style/mww"/>

                <android.support.v7.widget.CardView
                    style="@style/mw"
                    android:layout_marginBottom="32dp"
                    app:cardBackgroundColor="?attr/colorPrimary">

                    <TextView
                        android:id="@+id/profile_logout"
                        style="@style/mw"
                        android:gravity="center"
                        android:padding="16dp"
                        android:text="@string/profile_logout"
                        android:textColor="@color/white"
                        android:textSize="@dimen/Body1"/>

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</merge>