<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    style="@style/mm.v"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        layout="@layout/widget_toolbar"/>

    <FrameLayout
        style="@style/mm">

        <LinearLayout
            style="@style/mm.v">

            <android.support.v7.widget.CardView
                style="@style/mw">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/reply_text_bold"
                        style="@style/mmw"
                        android:gravity="center"
                        android:text="B"
                        android:textColor="@color/Gray"
                        android:textSize="36sp"
                        android:textStyle="bold"/>

                    <include
                        layout="@layout/widget_divider_vertical"/>

                    <FrameLayout
                        android:id="@+id/reply_text_underline"
                        style="@style/mmw">

                        <TextView
                            style="@style/mm"
                            android:gravity="center"
                            android:text="U"
                            android:textColor="@color/Gray"
                            android:textSize="36sp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="8dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:background="@color/Gray"/>

                    </FrameLayout>

                    <include
                        layout="@layout/widget_divider_vertical"/>

                    <FrameLayout
                        android:id="@+id/reply_text_strikethrough"
                        style="@style/mmw">

                        <TextView
                            style="@style/mm"
                            android:gravity="center"
                            android:text="S"
                            android:textColor="@color/Gray"
                            android:textSize="36sp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:background="@color/Gray"/>

                    </FrameLayout>

                    <include
                        layout="@layout/widget_divider_vertical"/>

                    <LinearLayout
                        android:id="@+id/reply_text_color"
                        style="@style/mmw.h"
                        android:gravity="center_vertical"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/reply_text_color_indicator"
                            style="@style/ww"
                            android:background="@drawable/button_transparent_transparentgray"
                            android:text="A"
                            android:textColor="@color/Gray"
                            android:textSize="36sp"/>

                        <TextView
                            android:id="@+id/reply_text_color_picker"
                            style="@style/mmw"
                            android:gravity="center"
                            android:text="@string/app_dropdown"
                            android:textColor="@color/Gray"
                            android:textSize="16sp"/>

                    </LinearLayout>

                    <include
                        layout="@layout/widget_divider_vertical"/>

                    <LinearLayout
                        android:id="@+id/reply_text_size"
                        style="@style/mmw.h"
                        android:layout_gravity="center_vertical"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/reply_text_size_indicator"
                            style="@style/ww"
                            android:background="@drawable/button_transparent_transparentgray"
                            android:maxLength="2"
                            android:text="16"
                            android:textColor="@color/Gray"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/reply_text_size_picker"
                            style="@style/mmw"
                            android:gravity="center"
                            android:text="@string/app_dropdown"
                            android:textColor="@color/Gray"
                            android:textSize="16sp"/>

                    </LinearLayout>

                    <include
                        layout="@layout/widget_divider_vertical"/>

                    <ImageView
                        android:id="@+id/reply_emot_on"
                        style="@style/mmw"
                        android:padding="8dp"
                        android:src="@drawable/image_emot"/>

                    <ImageView
                        android:id="@+id/reply_emot_off"
                        style="@style/mmw"
                        android:background="?attr/colorPrimary"
                        android:padding="8dp"
                        android:src="@drawable/image_emot_inverse"
                        android:visibility="gone"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <FrameLayout
                style="@style/mmw"
                android:padding="8dp">

                <tv.acfun.read.widgets.UBBEditText
                    android:id="@+id/reply_input"
                    style="@style/mm"
                    android:background="@color/Transparent"
                    android:gravity="start|top"
                    android:hint="@string/reply_input"
                    android:padding="8dp"
                    android:textAppearance="@style/Body1"/>

                <com.melnykov.fab.FloatingActionButton
                    android:id="@+id/reply_selectall"
                    style="@style/ww"
                    android:layout_gravity="right|bottom"
                    android:layout_marginBottom="16dp"
                    android:layout_marginRight="16dp"
                    android:scaleType="center"
                    android:src="@drawable/image_selectall"
                    app:fab_colorNormal="?attr/colorAccent"
                    app:fab_colorPressed="?attr/colorPrimaryDark"/>

                <com.melnykov.fab.FloatingActionButton
                    android:id="@+id/reply_unselect"
                    style="@style/ww"
                    android:layout_gravity="right|bottom"
                    android:layout_marginBottom="16dp"
                    android:layout_marginRight="16dp"
                    android:scaleType="center"
                    android:src="@drawable/image_unselect"
                    android:visibility="gone"
                    app:fab_colorNormal="?attr/colorAccent"
                    app:fab_colorPressed="?attr/colorPrimaryDark"/>

            </FrameLayout>

            <com.astuetz.PagerSlidingTabStrip
                android:id="@+id/reply_pager_strip"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/White"
                android:visibility="gone"
                app:pstsDividerColor="@color/Transparent"
                app:pstsIndicatorColor="?attr/colorPrimary"
                app:pstsIndicatorHeight="3dp"/>

            <android.support.v4.view.ViewPager
                android:id="@+id/reply_pager"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:visibility="gone"/>

        </LinearLayout>

        <include
            layout="@layout/widget_toolbar_shadow"/>

    </FrameLayout>

</LinearLayout>