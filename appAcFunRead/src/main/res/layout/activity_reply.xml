<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    style="@style/mm.v"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        layout="@layout/widget_toolbar"/>

    <FrameLayout
        style="@style/mm">

        <LinearLayout
            style="@style/mm.v">

            <android.support.v7.widget.CardView
                style="@style/mw">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/reply_style_bold"
                        style="@style/mmw"
                        android:src="@drawable/image_style_bold"/>

                    <include
                        layout="@layout/widget_divider_vertical"/>

                    <ImageView
                        android:id="@+id/reply_style_italic"
                        style="@style/mmw"
                        android:src="@drawable/image_style_italic"
                        android:visibility="gone"/>

                    <include
                        layout="@layout/widget_divider_vertical"/>

                    <ImageView
                        android:id="@+id/reply_style_underline"
                        style="@style/mmw"
                        android:src="@drawable/image_style_underline"/>

                    <include
                        layout="@layout/widget_divider_vertical"/>

                    <ImageView
                        android:id="@+id/reply_style_strikethrough"
                        style="@style/mmw"
                        android:src="@drawable/image_style_strikethrough"/>

                    <include
                        layout="@layout/widget_divider_vertical"/>

                    <LinearLayout
                        android:id="@+id/reply_style_color"
                        style="@style/mmw.h">

                        <FrameLayout
                            android:id="@+id/reply_style_color_indicator"
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/reply_style_color_picker"
                            style="@style/mmw"
                            android:gravity="center"
                            android:src="@drawable/image_style_bold"
                            android:text="@string/app_dropdown"
                            android:textAppearance="@style/Subhead"/>

                    </LinearLayout>

                    <include
                        layout="@layout/widget_divider_vertical"/>

                    <LinearLayout
                        android:id="@+id/reply_style_size"
                        style="@style/mmw">

                        <TextView
                            android:id="@+id/reply_style_size_indicator"
                            style="@style/mww"
                            android:gravity="center"
                            android:src="@drawable/image_style_bold"
                            android:text="@string/reply_size"
                            android:textAppearance="@style/Subhead"/>

                        <TextView
                            android:id="@+id/reply_style_size_picker"
                            style="@style/mmw"
                            android:gravity="center"
                            android:src="@drawable/image_style_bold"
                            android:text="@string/app_dropdown"
                            android:textAppearance="@style/Subhead"/>

                    </LinearLayout>

                    <include
                        layout="@layout/widget_divider_vertical"/>

                    <ImageView
                        android:id="@+id/reply_style_emot_off"
                        style="@style/mmw"
                        android:src="@drawable/image_style_emot"/>

                    <ImageView
                        android:id="@+id/reply_style_emot_on"
                        style="@style/mmw"
                        android:background="@color/Accent"
                        android:src="@drawable/image_style_emot_inverse"
                        android:visibility="gone"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <FrameLayout
                style="@style/mmw"
                android:padding="8dp">

                <tv.acfun.read.widgets.UBBEditText
                    android:id="@+id/reply_input"
                    style="@style/mm"
                    android:background="@color/Transparent"
                    android:gravity="start|top"
                    android:hint="@string/reply_input"
                    android:padding="8dp"
                    android:textAppearance="@style/Body1"/>

                <com.melnykov.fab.FloatingActionButton
                    android:id="@+id/reply_selectall"
                    style="@style/ww"
                    android:layout_gravity="right|bottom"
                    android:layout_marginBottom="16dp"
                    android:layout_marginRight="16dp"
                    android:scaleType="center"
                    android:src="@drawable/image_selectall"
                    app:fab_colorNormal="?attr/colorAccent"
                    app:fab_colorPressed="?attr/colorPrimaryDark"/>

                <com.melnykov.fab.FloatingActionButton
                    android:id="@+id/reply_unselect"
                    style="@style/ww"
                    android:layout_gravity="right|bottom"
                    android:layout_marginBottom="16dp"
                    android:layout_marginRight="16dp"
                    android:scaleType="center"
                    android:src="@drawable/image_unselect"
                    android:visibility="gone"
                    app:fab_colorNormal="?attr/colorAccent"
                    app:fab_colorPressed="?attr/colorPrimaryDark"/>

            </FrameLayout>

            <com.astuetz.PagerSlidingTabStrip
                android:id="@+id/reply_pager_strip"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/White"
                android:visibility="gone"
                app:pstsDividerColor="@color/Transparent"
                app:pstsIndicatorColor="?attr/colorPrimary"
                app:pstsIndicatorHeight="3dp"/>

            <android.support.v4.view.ViewPager
                android:id="@+id/reply_pager"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:visibility="gone"/>

        </LinearLayout>

    </FrameLayout>

</LinearLayout>