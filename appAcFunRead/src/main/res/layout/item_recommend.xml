<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    style="@style/mw.h"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        style="@style/mw.v"
        android:padding="8dp">

        <LinearLayout
            style="@style/mw.h"
            android:layout_gravity="bottom">

            <TextView
                android:id="@+id/recommend_number"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/shape_circle_1st"
                android:gravity="center"
                android:textAppearance="@style/Subhead.Inverse"/>

            <TextView
                android:id="@+id/recommend_channel"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:text="@string/channel_misc"
                android:textAppearance="@style/Subhead"
                android:textColor="@color/Selection_1st"/>

        </LinearLayout>

        <LinearLayout
            style="@style/mw.v"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/recommend_title"
                style="@style/mw"
                android:text="@string/content_title"
                android:textAppearance="@style/Title"/>

            <TextView
                android:id="@+id/recommend_description"
                style="@style/mw"
                android:layout_marginTop="8dp"
                android:text="@string/content_description"
                android:textAppearance="@style/Caption"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>