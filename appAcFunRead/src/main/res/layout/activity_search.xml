<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    style="@style/mm.v"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/Background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/White"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/search_sortresult"
            style="@style/mmw"
            android:entries="@array/search_sortresult"
            android:gravity="center"/>

        <Spinner
            android:id="@+id/search_target"
            style="@style/mmw"
            android:entries="@array/search_target"
            android:gravity="center"/>

        <Spinner
            android:id="@+id/search_range"
            style="@style/mmw"
            android:entries="@array/search_range"
            android:gravity="center"/>

    </LinearLayout>

    <FrameLayout
        style="@style/mm">

        <ListView
            android:id="@+id/search_list"
            style="@style/mm"
            android:divider="@color/Transparent"
            android:dividerHeight="16dp"
            android:listSelector="@drawable/button_transparent"
            android:padding="8dp"/>

        <com.harreke.easyapp.widgets.InfoView
            android:id="@+id/search_info"
            style="@style/mm"
            android:background="@color/TransparentWhite"
            android:visibility="gone"
            app:showRetryHintWhenEmpty="false"/>

    </FrameLayout>

</LinearLayout>