<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    style="@style/mw.h"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/mail_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/image_avatar"/>

    <LinearLayout
        style="@style/mw.v"
        android:layout_marginLeft="16dp">

        <LinearLayout
            style="@style/mw.h"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/mail_user"
                style="@style/mww"
                android:singleLine="true"
                android:textAppearance="@style/Subhead"
                android:textColor="@color/User"/>

            <TextView
                android:id="@+id/mail_new"
                style="@style/ww"
                android:background="@color/Red"
                android:padding="2dp"
                android:text="@string/mail_new"
                android:textColor="@color/White"
                android:textSize="@dimen/Caption"
                android:visibility="gone"/>

        </LinearLayout>

        <TextView
            android:id="@+id/mail_last"
            style="@style/mw"
            android:layout_marginTop="4dp"
            android:lines="2"
            android:textAppearance="@style/Caption"/>

    </LinearLayout>

</LinearLayout>