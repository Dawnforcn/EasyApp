<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/comment_quote"
    style="@style/mw.v"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/Ivory"
    android:padding="16dp">

    <TextView
        android:id="@+id/comment_quote_text"
        style="@style/ww"
        android:textAppearance="@style/Subhead"/>

    <LinearLayout
        style="@style/mw"
        android:layout_marginTop="4dp">

        <TextView
            android:id="@+id/comment_quote_username"
            style="@style/mww"
            android:textAppearance="@style/Caption"/>

        <TextView
            android:id="@+id/comment_quote_reference"
            style="@style/ww"
            android:textAppearance="@style/Caption"/>

    </LinearLayout>

</LinearLayout>