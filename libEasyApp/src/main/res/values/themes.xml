<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.EasyApp.Base" parent="Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.ActionBar</item>
        <item name="actionBarWidgetTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>

        <item name="childTabViewStyle">@style/Theme.EasyApp.ChildTabView</item>
        <item name="infoViewStyle">@style/Theme.EasyApp.InfoView</item>
    </style>

    <style name="Theme.EasyApp" parent="Theme.EasyApp.Base">
        <item name="windowActionBar">false</item>
    </style>

    <style name="Theme.EasyApp.Fullscreen" parent="Theme.EasyApp">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.EasyApp.ChildTabView">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="Theme.EasyApp.InfoView">
        <item name="android:padding">8dp</item>
        <item name="loadingText">@string/info_loading</item>
        <item name="emptyImage">@drawable/info_empty</item>
        <item name="emptyText">@string/info_empty</item>
        <item name="progressColor">?attr/colorPrimary</item>
        <item name="retryHint">@string/info_retryhint</item>
        <item name="retryHintColor">@color/Theme</item>
        <item name="retryImage">@drawable/info_retry</item>
        <item name="retryText">@string/info_retry</item>
        <item name="showRetryHintWhenEmpty">true</item>
        <item name="text">@string/info_loading</item>
        <item name="textColor">@color/Content</item>
        <item name="textSize">16dp</item>
    </style>

</resources>