<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.EasyApp.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="actionBarTheme">@style/Theme.EasyApp.ActionBar</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>

        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>

        <item name="childTabViewStyle">@style/Theme.EasyApp.ChildTabView</item>
        <item name="infoViewStyle">@style/Theme.EasyApp.InfoView</item>
        <item name="ratioImageViewStyle">@style/Theme.EasyApp.RatioImageView</item>
    </style>

    <style name="Theme.EasyApp" parent="Theme.EasyApp.Base"/>

    <style name="Theme.EasyApp.ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="Theme.EasyApp.ActionBar.Transparent" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="Theme.EasyApp.Fullscreen" parent="Theme.EasyApp">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.EasyApp.ChildTabView">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="Theme.EasyApp.InfoView">
        <item name="loadingText">@string/empty_loading</item>
        <item name="emptyText">@string/empty_idle</item>
        <item name="progressColor">?attr/colorPrimary</item>
        <item name="retryHint">@string/empty_retry</item>
        <item name="retryHintColor">?attr/colorAccent</item>
        <item name="retryText">@string/empty_failure</item>
        <item name="showRetryHintWhenEmpty">true</item>
        <item name="text">@string/empty_loading</item>
    </style>

    <style name="Theme.EasyApp.RatioImageView">
        <item name="ratio">1.78</item>
    </style>

</resources>