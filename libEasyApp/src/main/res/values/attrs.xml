<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="app">
        <attr name="emptyText" format="string"/>
        <attr name="drawable" format="reference"/>
        <attr name="drawableWidth" format="dimension"/>
        <attr name="drawableHeight" format="dimension"/>
        <attr name="loadingText" format="string"/>
        <attr name="progressColor" format="color"/>
        <attr name="ratio" format="float"/>
        <attr name="retryHint" format="string"/>
        <attr name="retryHintColor" format="color"/>
        <attr name="retryText" format="string"/>
        <attr name="rippleBackgroundColor" format="color"/>
        <attr name="rippleDuration" format="integer"/>
        <attr name="showRetryHintWhenEmpty" format="boolean"/>
        <attr name="text" format="string"/>

        <attr name="childTabViewStyle" format="reference"/>
        <attr name="infoViewStyle" format="reference"/>
        <attr name="ratioImageViewStyle" format="reference"/>
    </declare-styleable>

    <declare-styleable name="RatioImageView">
        <attr name="ratio"/>
    </declare-styleable>

    <declare-styleable name="RippleLayout">
        <attr name="rippleBackgroundColor"/>
        <attr name="rippleDuration"/>
    </declare-styleable>

    <declare-styleable name="SizableCompoundButton">
        <attr name="drawable"/>
        <attr name="drawableWidth"/>
        <attr name="drawableHeight"/>
    </declare-styleable>

</resources>