<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="app">
        <attr name="emptyImage" format="reference"/>
        <attr name="emptyText" format="string"/>
        <attr name="loadingText" format="string"/>
        <attr name="progressColor" format="color"/>
        <attr name="ratio" format="float"/>
        <attr name="retryHint" format="string"/>
        <attr name="retryHintColor" format="color"/>
        <attr name="retryImage" format="reference"/>
        <attr name="retryText" format="string"/>
        <attr name="showRetryHintWhenEmpty" format="boolean"/>
        <attr name="text" format="string"/>
        <attr name="textColor" format="color"/>
        <attr name="textSize" format="dimension"/>

        <attr name="childTabViewStyle" format="reference"/>
        <attr name="infoViewStyle" format="reference"/>
        <attr name="ratioImageViewStyle" format="reference"/>
    </declare-styleable>

    <declare-styleable name="InfoView">
        <attr name="loadingText"/>
        <attr name="emptyImage"/>
        <attr name="emptyText"/>
        <attr name="progressColor"/>
        <attr name="retryHint"/>
        <attr name="retryHintColor"/>
        <attr name="retryImage"/>
        <attr name="retryText"/>
        <attr name="showRetryHintWhenEmpty"/>
        <attr name="text"/>
        <attr name="textColor"/>
        <attr name="textSize"/>
    </declare-styleable>

    <declare-styleable name="RatioImageView">
        <attr name="ratio"/>
    </declare-styleable>

</resources>